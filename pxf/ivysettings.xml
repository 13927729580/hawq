<ivysettings>

  <!-- ====================================================================== -->

  <settings defaultResolver="default" />

  <!-- ====================================================================== -->

  <resolvers>
	  <chain name="default" returnFirst="true">
		  <ibiblio name="ibiblio" m2compatible="true"/>
		  <ibiblio name="apache" m2compatible="true" root="https://repository.apache.org/content/repositories/releases/"/>
		  <url name="greenplum-releng" m2compatible="true">
			  <ivy      pattern="http://releng.sanmateo.greenplum.com/ivy/modules/[organisation]/[module]/ivy-[revision].xml" />
			  <artifact pattern="http://releng.sanmateo.greenplum.com/ivy/modules/[organisation]/[module]/[type]s/[module]-[revision].[ext]" />
		  </url>
		  <ibiblio name="greenplum-artifactory" m2compatible="true" root="http://artifactory.greenplum.com/remote-repos" />
	  </chain>
  </resolvers>

  <!-- ====================================================================== -->

  <triggers>
    <ant-call target="download-untar-trigger"
              prefix="dep"
              event="post-download-artifact"
              filter="type=targz AND status=successful"/>
  </triggers>

  <!-- ====================================================================== -->

</ivysettings>
